    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_episode"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="centerCrop"
                android:src="@drawable/highlight_placeholder" />

            <ImageView
                android:id="@+id/image_episode_overlay"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="fitXY"
                android:src="@drawable/overlay" />

            <TextView
                android:id="@+id/episode_title1"
                android:text="Episode 2...."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_alignTop="@+id/image_episode"/>

            <TextView
                android:id="@+id/episode_title2"
                android:text="The House of Black and White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_alignBottom="@+id/image_episode"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_episode_details_clock"
                android:layout_below="@+id/image_episode"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/image_episode_details_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/episode_details_clock"/>

                    <TextView
                        android:id="@+id/text_details_clock"
                        android:text="14/06/2015 00:00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_summary"
                android:layout_below="@+id/card_view_episode_details_clock"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_episode_details_summary"
                        android:text="SUMMARY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abc_search_url_text_normal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:id="@+id/text_episode_details_content"
                        android:text="Arya arrives in Braavos. Jamie takes on a secret mission. Ellaria Sand seeks revenge for Oberyn's death. Stannis makes Jon a generous offer as the Night's Watch elects a new Lord Commander. Daenerys is faced with a difficult decision. Arya arrives in Braavos. Jamie takes on a secret mission. Ellaria Sand seeks revenge for Oberyn's death. Stannis makes Jon a generous offer as the Night's Watch elects a new Lord Commander. Daenerys is faced with a difficult decision."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

